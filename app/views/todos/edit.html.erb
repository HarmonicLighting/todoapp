<h1>Edit an existing Todo</h1>
<% if @todo.errors.any? %>
  <h2>The following errors prevented your todo from being saved</h2>
  <ul>
    <% @todo.errors.full_messages.each do |msg|%>
      <li>
        <%= msg %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @todo do |f|  %>
  <div class="form-group">
  <%= f.label :name, "Title"  %>
  <%= f.text_field :name, class:"form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :description, "Description" %>
  <%= f.text_area :description, size: "60x12", class:"form-control" %>
  </div>
  <%= f.submit "Update Todo", class: "btn btn-default" %>
  <%= link_to "Cancel", todos_path, class: "btn btn-warning" %>
<% end %>
